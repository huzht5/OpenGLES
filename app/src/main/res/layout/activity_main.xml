<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/first_triangle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个三角形"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/single_color_triangle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单色三角形"
            app:layout_constraintTop_toBottomOf="@+id/first_triangle_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/tricolor_triangle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三色三角形"
            app:layout_constraintTop_toBottomOf="@+id/single_color_triangle_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>